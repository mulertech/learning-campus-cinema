{% extends 'base.html.twig' %}

{% block title %}Réserver - Cinéma Aurora{% endblock %}

{% block body %}
    <div data-controller="confirmation">
        <div class="actions" style="justify-content:space-between">
            <h1 style="margin:0">Réserver une place</h1>
        </div>
        <p class="muted">{{ seance.film.titre }} - {{ seance.film.langue }} - {{ seance.date|date('d/m/Y H\\hi') }} - Salle {{ seance.salle.numero }}</p>

        {{ form_start(form, {'attr': {'data-action': 'submit->confirmation#show'}}) }}
            {{ form_widget(form) }}

            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Réserver</button>
        {{ form_end(form) }}

        <div data-confirmation-target="popup" class="hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center">
            <div class="bg-white p-6 rounded shadow-lg max-w-sm text-center">
                <h2 class="text-xl font-bold mb-4 text-black">Réservation en cours</h2>
                <p class="mb-4 text-black">Merci de patienter...</p>
            </div>
        </div>
    </div>
{% endblock %}
